extends ../layout/index

block content
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page

        if errors
            div(class= "max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppsercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method= "POST" action="/auth/register" noValidate)
                    div
                        label.block.text-sm.uppercase.text-gray-700.font-bold(for="name") Nombre
                        input#name.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="name" value= user ? user.name :'')
                    div
                        label.block.text-sm.uppercase.text-gray-700.font-bold(for="email") Correo
                        input#email.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Correo" type="email" name="email" value= user ? user.email :'')
                    div
                        label.block.text-sm.uppercase.text-gray-700.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Contraseña" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-700.font-bold(for="password_conf") Confirmar Contraseña
                        input#password_conf.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Confirma Tu Contraseña" type="password" name="password_conf")
                    
                    div.flex.item-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia sesión
                        a.text-gray-500.text-xs(href="/auth/forgotPassword") Olvidé mi contraseña

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")